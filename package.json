{
    "name": "osrs-tools",
    "version": "1.1.0",
    "main": "public/electron.js",
    "private": true,
    "homepage": "./",
    "dependencies": {
        "electron-is-dev": "^1.0.1",
        "osrs-wrapper": "^1.0.5",
        "react": "^16.8.2",
        "react-dom": "^16.8.2",
        "react-scripts": "^2.1.8",
        "styled-components": "^4.1.3"
    },
    "scripts": {
        "precommit": "pretty-quick",
        "start": "react-scripts start",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "electron": "electron .",
        "build:react": "react-scripts build",
        "build:electron": "cross-env NODE_ENV=production electron-builder --mac --win --x64 --linux -p always",
        "build": "yarn build:react && yarn build:electron"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "devDependencies": {
        "cross-env": "^5.2.0",
        "electron": "^3.0.6",
        "electron-builder": "^20.28.3",
        "husky": "^1.1.2",
        "jest-dom": "^3.1.3",
        "prettier": "^1.14.3",
        "pretty-quick": "^1.8.0",
        "react-testing-library": "^6.0.0",
        "typescript": "^3.3.4000"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}",
            "!/node_modules/",
            "!src/index.js",
            "!src/registerServiceWorker.js"
        ]
    },
    "build": {
        "appId": "io.atom.electron.osrs-tool",
        "productName": "OSRS Tools",
        "files": [
            "build/**/*",
            "package.json",
            "electron.js"
        ],
        "mac": {
            "icon": "assets/icons/icon.png"
        },
        "win": {
            "icon": "assets/icons/icon.png",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ]
        },
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        }
    }
}
